              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "datas": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/TrackName"
                      }
                    }
                  },
                  "required": [
                    "message",
                    "datas"
                  ]
                }
              }
            }
          },
          "500": {
