    "/api/user/auth/email_register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register with email/password",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password2": {
                    "type": "string",
                    "format": "password"
                  },
                  "profile": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "username",
                  "email",
                  "password2",
                  "profile"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "profile": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "profile"
                  ]
                }
              }
            }
          },
          "409": {
            "description": "Email already exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/auth/email_login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login with email/password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Logged in",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "profile": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "profile"
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Invalid password",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/auth/logout": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Logout and clear auth cookie",
        "responses": {
          "200": {
            "description": "Logged out",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          },
          "202": {
            "description": "No token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/user/google/login": {
      "get": {
        "tags": [
          "Google Auth"
        ],
        "summary": "Start Google OAuth",
        "responses": {
          "302": {
            "description": "Redirect to Google"
          }
        }
      }
    },
    "/api/user/google/auth": {
      "get": {
        "tags": [
          "Google Auth"
        ],
        "summary": "Google OAuth callback",
        "responses": {
          "302": {
            "description": "Redirect to client app with cookie set"
          },
          "401": {
            "description": "OAuth failure"
          }
        }
      }
    },
    "/api/user/google/fail": {
      "get": {
        "tags": [
          "Google Auth"
        ],
        "summary": "OAuth failure redirect",
        "responses": {
          "302": {
            "description": "Redirect to client app"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "jwt"
      }
    },
    "schemas": {
      "Track": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "desc": {
            "type": "string"
          },
          "album": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "image_id": {
            "type": "string"
          },
          "audio": {
            "type": "string"
          },
          "audio_id": {
            "type": "string"
          },
          "duration": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "desc",
          "album",
          "image",
          "image_id",
          "audio",
