{
  "openapi": "3.0.3",
  "info": {
    "title": "Streaming User Backend API",
    "version": "1.0.0",
    "description": "User service backend for the streaming app. Provides authentication, tracks, albums, playlists, likes, and search."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development"
    },
    {
      "url": "https://streaming-user-backend.onrender.com",
      "description": "Production"
    }
  ],
  "tags": [
    {
      "name": "System"
    },
    {
      "name": "Tracks"
    },
    {
      "name": "Albums"
    },
    {
      "name": "Playlists"
    },
    {
      "name": "Likes"
    },
    {
      "name": "Search"
    },
    {
      "name": "Auth"
    },
    {
      "name": "Google Auth"
    }
  ],
  "paths": {
    "/api/is_login": {
      "get": {
        "tags": [
          "System"
        ],
        "summary": "Check login status",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Authenticated user profile image",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "profile": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "profile"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/track/list": {
      "get": {
        "tags": [
          "Tracks"
        ],
        "summary": "List tracks",
        "responses": {
          "200": {
            "description": "Tracks list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sucess": {
                      "type": "boolean"
                    },
                    "track_data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Track"
                      }
                    }
                  },
                  "required": [
                    "sucess",
                    "track_data"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
