    "/api/user/playlist/update": {
      "post": {
        "tags": [
          "Playlists"
        ],
        "summary": "Create playlists and add or remove a track",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "track_id": {
                    "type": "string"
                  },
                  "list_data": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/PlaylistUpdateItem"
                    }
                  }
                },
                "required": [
                  "track_id",
                  "list_data"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update completed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/playlist/remove": {
      "post": {
        "tags": [
          "Playlists"
        ],
        "summary": "Remove a playlist reference from the user",
        "description": "Note: the handler does not return a response body on success.",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "list_id": {
                    "type": "string"
                  }
                },
                "required": [
                  "list_id"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success (no response body)"
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/playlist/remove_list": {
      "post": {
        "tags": [
          "Playlists"
        ],
        "summary": "Delete a playlist and remove it from the user",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "list_id": {
                    "type": "string"
                  }
                },
                "required": [
                  "list_id"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Removed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/like/display": {
      "get": {
